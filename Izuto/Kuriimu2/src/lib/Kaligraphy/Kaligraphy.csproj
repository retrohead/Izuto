    <PackageReference Include="System.Drawing.Common" Version="5.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kaligraphy.Contract\Kaligraphy.Contract.csproj" />
    <ProjectReference Include="..\Komponent\Komponent.csproj" />
  </ItemGroup>

